generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://trybesocialdb:Tryber@123@localhost:5432/trybesocialdb"
}

model User {
  user_id   Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String
  tokenRt String?

  trybe String?
  firstName String?
  lastName  String?

  @@map("users")
}

model Job {
  job_id    Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name  String
  external_link String

  @@map("jobs")
}


