generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id   Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String
  tokenRt String?

  trybe String?
  firstName String?
  lastName  String?

  @@map("users")
}

model Job {
  id    Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title  String @default("")
  description String @default("")
  link String

  @@map("jobs")
}

model Lab {
  id    Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title  String @default("")
  description String @default("")
  link String

  @@map("labs")
}


